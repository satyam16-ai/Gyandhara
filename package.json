{
  "name": "gyandhara-educational-platform",
  "version": "2.0.0",
  "description": "GYANDHARA - AI-powered low-bandwidth educational platform with real-time whiteboard, voice communication, and collaborative learning features for rural areas",
  "private": true,
  "homepage": "https://github.com/yourusername/gyandhara-educational-platform",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/gyandhara-educational-platform.git"
  },
  "keywords": [
    "gyandhara",
    "rural-education",
    "education",
    "whiteboard",
    "real-time",
    "collaboration",
    "low-bandwidth",
    "voice-communication",
    "ai-powered",
    "nextjs",
    "mongodb",
    "socketio"
  ],
  "author": {
    "name": "VoiceBoard Team",
    "email": "support@voiceboard.com"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "next dev -p 3000",
    "dev:3001": "next dev -p 3001",
    "build": "next build",
    "start": "next start -p 3000",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "type-check": "tsc --noEmit",
    "server": "node server/index.js",
    "server:dev": "nodemon server/index.js --watch server --ext js,json",
    "server:debug": "nodemon --inspect server/index.js --watch server --ext js,json",
    "server:prod": "NODE_ENV=production node server/index.js",
    "dev:full": "concurrently \"npm run dev\" \"npm run server:dev\" --names \"NEXT,API\" --prefix-colors \"blue,green\"",
    "dev:debug": "concurrently \"npm run dev\" \"npm run server:debug\" --names \"NEXT,API\" --prefix-colors \"blue,yellow\"",
    "prod:full": "concurrently \"npm run start\" \"npm run server:prod\" --names \"NEXT,API\" --prefix-colors \"blue,green\"",
    "init-admin": "node server/scripts/initAdmin.js",
    "db:seed": "node server/scripts/seedDatabase.js",
    "clean": "rm -rf .next out dist",
    "clean:all": "npm run clean && rm -rf node_modules package-lock.json",
    "reinstall": "npm run clean:all && npm install",
    "postinstall": "echo 'Skipping admin init for deployment'",
    "prestart": "npm run build",
    "prod:build": "npm run clean && npm run type-check && npm run build",
    "prod:start": "npm run prod:build && npm run prod:full",
    "deploy:vercel": "npm run prod:build && vercel --prod",
    "deploy:netlify": "npm run prod:build && netlify deploy --prod --dir=.next",
    "deploy:heroku": "git push heroku main",
    "deploy:pm2": "pm2 start ecosystem.config.js --env production",
    "deploy:docker": "docker build -t gyandhara-platform . && docker run -p 3000:3000 -p 8080:8080 gyandhara-platform",
    "health-check": "curl -f http://localhost:8080/api/health || exit 1",
    "audit:fix": "npm audit fix --force",
    "update:deps": "npm update && npm audit fix"
  },
  "dependencies": {
    "@types/nodemailer": "^7.0.1",
    "axios": "^1.6.2",
    "bcryptjs": "^3.0.2",
    "buffer": "^6.0.3",
    "cors": "^2.8.5",
    "crypto-browserify": "^3.12.1",
    "crypto-js": "^4.2.0",
    "dotenv": "^17.2.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.0.1",
    "express-validator": "^7.2.1",
    "fabric": "^5.3.0",
    "fflate": "^0.8.2",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.542.0",
    "mongodb": "^6.19.0",
    "mongoose": "^8.18.0",
    "msgpack5": "^6.0.2",
    "multer": "^1.4.5-lts.1",
    "next": "15.0.4",
    "node-opus": "^0.3.3",
    "nodemailer": "^7.0.6",
    "opus-media-recorder": "^0.8.0",
    "pako": "^2.1.0",
    "react": "^18",
    "react-dom": "^18",
    "roughjs": "^4.6.6",
    "socket.io": "^4.7.5",
    "socket.io-client": "^4.7.5",
    "stream-browserify": "^3.0.0",
    "tailwindcss-animate": "^1.0.7",
    "twilio": "^5.8.2",
    "ws": "^8.16.0",
    "autoprefixer": "^10.0.1",
    "postcss": "^8",
    "tailwindcss": "^3.3.0",
    "typescript": "^5",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/node": "^20"
  },
  "devDependencies": {
    "@types/msgpack5": "^3.4.6",
    "@types/pako": "^2.0.4",
    "@types/ws": "^8.5.10",
    "concurrently": "^8.2.2",
    "eslint": "^8",
    "eslint-config-next": "15.0.4",
    "newman": "^6.2.1",
    "nodemon": "^3.1.10"
  }
}
