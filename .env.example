# Gyaandhara Educational Platform - Environment Configuration

# =================================
# DATABASE CONFIGURATION
# =================================
MONGODB_URI=mongodb://localhost:27017/gyaandhara
DB_NAME=gyaandhara

# =================================
# SERVER CONFIGURATION  
# =================================
PORT=8080
NODE_ENV=development
FRONTEND_URL=http://localhost:3001

# =================================
# SECURITY CONFIGURATION
# =================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=your-session-secret-key

# =================================
# EMAIL SERVICE (TWILIO SENDGRID)
# =================================
TWILIO_ACCOUNT_SID=YOUR_TWILIO_ACCOUNT_SID_HERE
TWILIO_AUTH_TOKEN=YOUR_TWILIO_AUTH_TOKEN_HERE
TWILIO_FROM_EMAIL=noreply@yourdomain.com
TWILIO_FROM_PHONE=+1234567890

# =================================
# FILE STORAGE CONFIGURATION
# =================================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# =================================
# OPTIONAL AI SERVICES
# =================================
# OPENAI_API_KEY=your-openai-api-key
# GOOGLE_TRANSLATE_API_KEY=your-google-translate-key

# =================================
# ADMIN CONFIGURATION
# =================================
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=change-this-secure-password

# =================================
# FEATURE FLAGS
# =================================
ENABLE_AI_FEATURES=false
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_COMPRESSION=true
ENABLE_AUDIO_RECORDING=true

# =================================
# PERFORMANCE CONFIGURATION
# =================================
DEFAULT_BANDWIDTH_MODE=normal
MAX_PARTICIPANTS_PER_SESSION=30
SESSION_TIMEOUT_MINUTES=480
COMPRESSION_LEVEL=5

# =================================
# DEVELOPMENT CONFIGURATION
# =================================
# Set to true for development features
DEBUG_MODE=false
ENABLE_CORS=true
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MINUTES=15
